# launch wifi tray
nm-applet &

# set writing rate
# xset r rate 200 50
# disable key repeat to make my vim experience better
xset r off

# launch compton compositor
compton -i 0.96 --inactive-dim 0.15 -r0 -o0 -l0 -t0 --backend glx --refresh-rate 60 --glx-no-stencil --glx-no-rebind-pixmap --use-damage -I 1 -O 1 --vsync -b

# launch locking program
xss-lock -- lock &

# launch key bindings
sxhkd &

# set wallpaper
WALL="$HOME/Pictures/samurai_river.jpg"
feh --no-fehbg --bg-scale "$WALL" &
