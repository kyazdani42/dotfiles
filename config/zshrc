export ZSH="/home/kiyan/.oh-my-zsh"

ZSH_THEME=""

fpath+=('/home/kiyan/.zsh_functions')

plugins=(git zsh-autosuggestions docker colored-man-pages)

if [ ! -z $PLUG_PY ]
then
	eval "$(pyenv init -)"
	eval "$(pyenv virtualenv-init -)"
	plugins+=(pyenv)
fi

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

source $ZSH/oh-my-zsh.sh

[ -f '/home/kiyan/.gcloud/path.zsh.inc' ] && . '/home/kiyan/.gcloud/path.zsh.inc'
[ -f '/home/kiyan/.gcloud/completion.zsh.inc' ] && . '/home/kiyan/.gcloud/completion.zsh.inc'

# my config
alias pacman="sudo pacman"
alias cht="curl cheat.sh/"
alias gitbeauty="git log --all --graph --oneline"
alias ls="exa"
alias la="ls -la --git"
alias vim="nvim"
alias open="xdg-open"
alias find="fd"
alias cdd="cd $HOME/Document/workspaces"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export FZF_DEFAULT_COMMAND="rg --hidden -l "" -g '!.git' ."

eval "$(starship init zsh)"

source /home/kiyan/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
