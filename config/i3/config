# Mod1 is Alt, Mod4 is Windows
set $mod Mod1

floating_modifier $mod

font pango:Ibm Plex Mono Medium 10
# in case there is a title
title_align center
# no border, no title bar
default_border pixel 2
new_window pixel 2
smart_borders on
smart_gaps on
# borders on floating to make it easier to resize
default_floating_border pixel 2

# the focus only changes when clicking
focus_follows_mouse no

# reload the configuration file
bindsym $mod+F2 reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+F2 restart

for_window [class="Org.gnome.Nautilus" instance="org.gnome.Nautilus"] floating enable, resize set 1000 800, border pixel 2 
for_window [class="VirtualBox Manager" instance="VirtualBox Manager"] floating enable, resize set 2600 1600, border pixel 2
for_window [class="VirtualBox Machine" instance="VirtualBox Machine"] floating enable, resize set 1816 1094
for_window [class="Pavucontrol" instance="pavucontrol"] floating enable, resize set 1200 600, border pixel 2
for_window [class="MultiMC5" instance="multimc"] floating enable, resize set 1000 500, border pixel 2
for_window [class="Minecraft 1.15.2" instance="Minecraft 1.15.2"] floating enable, border pixel 2

bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Return split h, exec spawn-alacritty-cwd || $TERMINAL
bindsym $mod+Shift+Return split v, exec spawn-alacritty-cwd || $TERMINAL

# disable clicking
bindsym button1 nop

# Contrain focused window
floating_maximum_size 1500 x 1000

# go to mode
bindsym $mod+Shift+z split h
bindsym $mod+Shift+v split v

# gaps
bindsym $mod+m gaps inner current plus 5
bindsym $mod+n gaps inner current minus 5
bindsym $mod+Shift+e gaps inner current set 0
bindsym $mod+Shift+f gaps inner current set 10

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# enter fullscreen mode
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# turn into floating scrathpad
bindsym $mod+Control+s move scratchpad
bindsym $mod+Control+Return scratchpad show
# toggle tiling / floating - reset from scratchpad
bindsym $mod+Shift+s floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

bindsym $mod+Shift+r mode "resize"
mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt
	bindsym $mod+Shift+r mode "default"
}

set_from_resource $bgDark     bg_dark   #000000
set_from_resource $bgCol      color0    #000000
set_from_resource $white      color15   #FFFFFF
set_from_resource $white-alt  color7    #cecece
set_from_resource $red        color1    #FF5555
set_from_resource $cyan       color6    #9AEDFE

# for these 5 classes, colors can be, in the order:
# - border color
# - background color
# - text color
# - indicator color
# - child_border color

# Note that for the window decorations, the color around the child window is the "child_border",
# and "border" color is only the two thin lines around the titlebar.

# The indicator color is used for indicating where a new window will be opened.
# For horizontal split containers, the right border will be painted in indicator color,
# for vertical split containers, the bottom border.
# This only applies to single windows within a split container,
# which are otherwise indistinguishable from single windows outside of a split container.

client.focused          $bgDark $bgDark $cyan       $white-alt $white-alt
client.focused_inactive $bgDark $bgDark $white-alt  $bgDark $bgDark
client.unfocused        $bgCol $bgCol   $white-alt  $bgDark $bgDark
client.placeholder      $bgCol $bgCol   $white-alt  $bgDark $bgDark
client.urgent           $red   $red     $red        $red   $red

client.background       $bgCol

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
