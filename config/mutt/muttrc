source creds

set editor = "nvim"
set header_cache = "~/.cache/mutt"

set folder="~/.cache/mail/protonmail"
set smtp_url = "smtp://$smtp_user@127.0.0.1:1025"

set spoolfile = "+Inbox"
set record = "+sent"
set trash  = "+trash"
set postponed = "+drafts"
mailboxes =Inbox =sent =trash =drafts =spam

set sort = 'reverse-date'
set sleep_time = 0
set mark_old = no
set mime_forward = yes
set fast_reply
set fcc_attach
set reverse_name
auto_view text/html
auto_view application/pgp-encrypted
alternative_order text/plain text/enriched text/html

# TODO: configure
set date_format="%y/%m/%d %I:%M%p"

source bindings
source colors

