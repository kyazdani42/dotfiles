XF86Audio{Lower,Raise}Volume
	amixer -q sset Master 3%{-,+} unmute && notify-sound-level

super + {Down,Up}
	amixer -q sset Master 3%{-,+} unmute && notify-sound-level 

XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 5 && notify-brightness-level

