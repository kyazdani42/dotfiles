export ZSH="/home/kiyan/.oh-my-zsh"

ZSH_THEME=""

plugins=(git zsh-autosuggestions docker colored-man-pages vi-mode)
export KEYTIMEOUT=1

if [ ! -z $PYENV ]
then
	eval "$(pyenv init -)"
	eval "$(pyenv virtualenv-init -)"
	plugins+=(pyenv)
fi

if [ ! -z $NVM ]
then
	export NVM_DIR="$HOME/.nvm"
	[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
	plugins+=(nvm)
fi

source $ZSH/oh-my-zsh.sh

# enable control j to change to normal mode
bindkey -r "^J"
bindkey "^J" vi-cmd-mode

[ -f '/home/kiyan/.gcloud/path.zsh.inc' ] && . '/home/kiyan/.gcloud/path.zsh.inc'
[ -f '/home/kiyan/.gcloud/completion.zsh.inc' ] && . '/home/kiyan/.gcloud/completion.zsh.inc'

function open() {
	&>/dev/null xdg-open $1 &
	disown
}

alias pacman="sudo pacman"
alias cht="curl cheat.sh/"
alias gitbeauty="git log --all --graph --oneline"
alias ls="exa"
alias la="exa -la --git"
alias lt="exa -Tla --git"
alias vim="nvim"
alias find="fd"

[ -f $HOME/.fzf.zsh ] && source $HOME/.fzf.zsh
[ $(command -v fzf) ] && export FZF_DEFAULT_COMMAND="rg --hidden -l "" -g '!.git' ."

[ -d $HOME/.zsh-syntax-highlighting ] && source $HOME/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

[ $(command -v starship) ] && eval "$(starship init zsh)"

