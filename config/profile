BINARIES=(
# program folders
"$HOME/.cargo/bin"
"$HOME/.deno/bin"
"$HOME/.yarn/bin"
"$HOME/.pyenv/bin"
"$HOME/.nvm"
# local folders
"$HOME/bin"
"$HOME/.bin"
"$HOME/.local/bin"
"$HOME/.workbin"
)

for path in "${BINARIES[@]}"; do
	[ -d "$path" ] && export PATH="$path:$PATH"
done

if command -v go; then
	gopath="$HOME/Document/go_projects"
	[ ! -d "$gopath" ] && mkdir -p "$gopath"/{src,pkg,bin}
	export GOPATH=$gopath
	export PATH="$GOPATH/bin:$PATH"
fi

# start ssh agent to use ssh
eval "$(ssh-agent -s)"
ssh-add "$HOME/.ssh/id_rsa.pub"


# use qt5ct as QT plateform
export QT_QPA_PLATFORMTHEME="qt5ct"

#path to gtk 2 config file
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"

# default programs
export EDITOR="/usr/bin/vim"
export TERMINAL="/usr/bin/alacritty"
export BROWSER="/usr/bin/chromium"

# set wallpaper
WALL="$HOME/Pictures/Disco_Dingo.png"
feh --bg-scale "$WALL"

# launch wifi tray
nm-applet &

# launch compton compositor
compton --backend glx --refresh-rate 60 --glx-no-stencil --glx-no-rebind-pixmap --use-damage -I 1 -O 1 --vsync -b

# launch locking program
xss-lock -- lock &

# bind caps lock to escape
xmodmap -e "clear lock"
xmodmap -e "keysym Caps_Lock = Escape"

