# Mod1 is Alt, Mod4 is Windows
set $mod Mod1

bindsym $mod+d exec dmenu_run
bindsym $mod+Shift+w exec $BROWSER

# bindsym $mod+w exec $TERMINAL -e $HOME/.config/vifm/scripts/vifmrun

bindsym $mod+Control+s move scratchpad
bindsym $mod+Control+Return scratchpad show

bindsym $mod+Return split h, exec $HOME/.config/alacritty/spawn-alacritty-cwd || $TERMINAL
bindsym $mod+Shift+Return split v, exec $HOME/.config/alacritty/spawn-alacritty-cwd || $TERMINAL
# go to mode
bindsym $mod+Shift+z split h
bindsym $mod+Shift+v split v

# font for titles
font pango: monospace 0
new_window 1pixel

# gaps
bindsym $mod+m gaps inner current plus 5
bindsym $mod+n gaps inner current minus 5
bindsym $mod+Shift+d gaps inner current set 0
bindsym $mod+Shift+f gaps inner current set 15

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
# bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+F2 reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+F2 restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+x exec "[ $(echo -e 'No\nYes' | dmenu -i -p 'Do you want to exit?') == 'Yes' ] && i3-msg exit"
# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym h resize shrink width 5 px or 10 ppt
	bindsym j resize grow height 5 px or 10 ppt
	bindsym k resize shrink height 5 px or 10 ppt
	bindsym l resize grow width 5 px or 10 ppt
	bindsym Escape mode "default"
}

bindsym $mod+Shift+r mode "resize"

# set XResources colors
set_from_resource $black    i3wm.color0  #000000
set_from_resource $black_h  i3wm.color8  #4D4D4D

set_from_resource $red      i3wm.color1  #FF5555
set_from_resource $red_h    i3wm.color9  #FF6E67

set_from_resource $green    i3wm.color2  #50FA7B
set_from_resource $green_h  i3wm.color10 #5AF78E

set_from_resource $yellow   i3wm.color3  #F1FA8C
set_from_resource $yellow_h i3wm.color11 #F4F99D

set_from_resource $purple   i3wm.color4  #BD93F9
set_from_resource $purple_h i3wm.color12 #CAA9FA

set_from_resource $pink     i3wm.color5  #FF79C6
set_from_resource $pink_h   i3wm.color13 #FF92D0

set_from_resource $blue     i3wm.color6  #8BE9FD
set_from_resource $blue_h   i3wm.color14 #9AEDFE

set_from_resource $grey     i3wm.color7  #2a2b2f
set_from_resource $grey_h   i3wm.color15 #2E3440

set $bar_color #2a2b2f

# class                 border  backgr. text  indicator child_border
client.focused          $blue_h $bar_color #FFFFFF $purple   $purple
client.focused_inactive $pink_h $bar_color #FFFFFF $bar_color $bar_color
client.unfocused        $bar_color $bar_color #FFFFFF $bar_color $bar_color
client.urgent           $red    $bar_color #FFFFFF $red      $red_h

exec_always --no-startup-id $HOME/.config/polybar/launch.sh

exec_always --no-startup-id xrandr --dpi 220
# bind caps lock to escape
exec_always --no-startup-id xmodmap -e "clear lock"
exec_always --no-startup-id xmodmap -e "keysym Caps_Lock = Escape"

