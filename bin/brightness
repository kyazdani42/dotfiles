#!/bin/bash

[ -z "$1" ] && exit 1

actual_brightness=$(cat /sys/class/backlight/intel_backlight/brightness)
if [ "$1" == "-" ]; then
    [ $actual_brightness -le 10000 ] && exit 1
    new_brightness=$(( ${actual_brightness} - 10000 ))    
elif [ "$1" == "+" ]; then
    max_brightness=$(cat /sys/class/backlight/intel_backlight/max_brightness)
    [ $actual_brightness -ge $max_brightness ] && exit 1
    new_brightness=$(( ${actual_brightness} + 10000 ))    
else
    exit 1
fi

echo $new_brightness

echo $new_brightness | sudo tee /sys/class/backlight/intel_backlight/brightness >/dev/null


