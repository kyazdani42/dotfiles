#!/usr/bin/env bash

[ "$XDG_SESSION_TYPE" == "wayland" ] && makoctl dismiss -a

vol="$(amixer get Master mono | grep -oE '[0-9]{1,3}%')"
off="$(amixer get Master mono | grep 'off')"
[ "$off" != "" ] && vol="Mute"
notify-send \
    -h string:x-canonical-private-synchronous:anything \
    -t 1000 \
    "volume: " "$vol"

