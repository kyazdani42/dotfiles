#!/bin/sh

exit_="‚Üí Exit"
shutdown="‚èª Shutdown"
reboot="üîÉ Reboot"

action=$(echo -n "${exit_}
${shutdown}
${reboot}" | rofi -dmenu -config "$XDG_CONFIG_HOME/rofi/dialog.rasi")

[ "$action" == "$exit_" ] && i3-msg exit
[ "$action" == "$shutdown" ] && systemctl poweroff -i
[ "$action" == "$reboot" ] && reboot
