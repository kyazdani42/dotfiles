#!/bin/bash

font="Cantarell:pixelsize=20"
bg_color="#221f3e"
fg_selected_color="#BD93F9"
fg_color="#ffffff"
lines=100
width=400

key=$(\
    printf "é\nà\nç\nè\nê\nû\nù\nô" \
    | dmenu -i \
    -l $lines \
    -w $width \
    -fn $font \
    -sf $fg_color \
    -sb $fg_selected_color \
    -nf $fg_color \
    -nb $bg_color
)

echo -n "$key" | xclip -selection c
