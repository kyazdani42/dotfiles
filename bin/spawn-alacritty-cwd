#!/bin/sh

instance="$(swaymsg -t get_tree | grep -A 40 'focused": true' | grep -B1 'Alacritty')"

if [ "$instance" == "" ]; then
    exec alacritty
else
    pid="$(echo "$instance" | grep "pid" | cut -d':' -f2 | tr -d ', ')"
    exec alacritty --working-directory "$(readlink -e /proc/"$(pgrep -P $pid | tail -n1)"/cwd)"
fi
