#!/bin/sh

font="Cantarell:pixelsize=20"
bg_color="#221f3e"
fg_selected_color="#FF5555"
fg_color="#ffffff"
height=39

exitstatus=$(
	printf "cancel\nexit\nshutdown\nreboot" |
		dmenu -i \
			-h $height \
			-fn $font \
			-sf $fg_color \
			-sb $fg_selected_color \
			-nf $fg_color \
			-nb $bg_color
)

[ "$exitstatus" = "exit" ] && i3-msg exit
[ "$exitstatus" = "shutdown" ] && systemctl poweroff
[ "$exitstatus" = "reboot" ] && systemctl reboot
